@using WebApplication1.Models
@model List<Book>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add2</title>
</head>
<body>
    <div> 
        
        
        @using (Html.BeginForm())
        {
            <h2>for and EditorFor</h2>
            for (int i = 0; i < Model.Count; i++)
            {
                <h4>Книга № @(i + 1)</h4>
                @Html.HiddenFor(m => m[i].BookId)
                @: Name: @Html.EditorFor(m => m[i].Name)
                @: Author: @Html.EditorFor(m => m[i].Author)
                @: Price: @Html.EditorFor(m => m[i].Price)
                
             }
        <input type="submit" />
        }
    </div>
    <div>@using (Html.BeginForm())
         { 
            <h2>foreach and EditorFor</h2>
             foreach(Book b in Model)
            {
                @: Name: @Html.EditorFor(m=>b.Name)
                @: Author: @Html.EditorFor(m=>b.Author)
                @: Price: @Html.EditorFor(m=>b.Price)
            }
            <button name="but1" value="val1">Отправить!</button>
         }     
    </div>
    <div>@using (Html.BeginForm())
         { 
            <h2>without for</h2>    
            @Html.EditorForModel()
         }
    </div>
    <div>
        @using (Html.BeginForm())
        {
            <h2>foreach and EditorForModel inside</h2>
            
        }
</div>

</body>
</html>
